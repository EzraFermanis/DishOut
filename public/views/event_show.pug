html
  head
    title GUEST view event page (event/:id)
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/normalize/4.1.1/normalize.min.css')
    link(rel='stylesheet', type='text/css', href='../css/index.css')
    link(rel='icon', type='img/ico', href='http://www.calvarybelmar.org/wp-content/uploads/2015/06/cc-kitchen-utensils-clip-art-pan.png')
  body
    h1 GUEST view event page (event/:id)
    name Name: #{event.name}
    time Time: #{event.time}
    date Date: #{event.date}
    description Description: #{event.description}
    location Location: #{event.location}

    hr

    h2 Dishes Guests need to bring
    ul
      each dish in dishes
        li= dish.course + " " + dish.name
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js')
