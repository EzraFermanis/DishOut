extends layout

block content
  body#page-top(data-spy='scroll')
  include nav
  .container
    .row
      .col-md-8.col-md-offset-2
        h1 Edit your details
        p Personal info
        form(action='/user/' + user.id + '/update' method='post')
          .form-group
            label( for="name") Name:
            input(type="text" class="form-control" name="name" id="name" value=user.name)
          .form-group
            label( for="email") Email:
            input(type="text" class="form-control" name="email" id="email" value=user.email)
          .form-group
            label( for="currentPassword") Current Password:
            input(type="text" class="form-control" name="currentPassword" id="currentPassword" placeholder="Current Password")
          .form-group
            label( for="newPassword") New Password:
            input(type="text" class="form-control" name="newPassword" id="newPassword" placeholder="New Password")
          .form-group
            label( for="newPassword") Confirm New Password:
            input(type="text" class="form-control" name="newPassword" id="newPassword" placeholder="Confirm your New Password")
          button.btn.btn-primary.btn-lg(type='submit') Save Changes
