extends layout

block content
  body#page-top(data-spy='scroll')
  include nav
  .container
    .row
      .col-md-8.col-md-offset-2
        h1 Create a New DishOut Event
        p Fill in the forms below to create an Event
        form(action='/event/create' method='post')
          .form-group
            label( for="name") Name:
            input(type="text" class="form-control" name="name" id="name" placeholder="Enter the name of the event here...")
          .form-group
            label( for="date") Date:
            input(type="text" class="form-control" name="date" id="date" placeholder="Enter the date of the event here...")
            script.
              $('#date').datepicker({
                    format: "dd/mm/yyyy",
                    autoclose: true,
                    todayHighlight: true
                  })
          .form-group
            label( for="time") Time:
            input(type="text" class="form-control input-small" name="time" id= "time" placeholder="Enter the time of the event here")
            script. 
              $('#time').timepicker()
          .form-group
            label( for="location") Address of Event:
            input(type="text" class="form-control" name="location" id="location" placeholder="Enter the location of the event...")
          .form-group
            label( for="description") Description:
            input(type="text" class="form-control" name="description" id="Description" placeholder="Enter a brief description about the event...")
          .form-group
            label( for="bitcoinAddress") bitcoin address:
            input(type="text" class="form-control" name="bitcoinAddress" id="bitcoinAddress" placeholder="Please enter a bitcoin address for tips (optional)")

          button.btn.btn-primary.btn-lg(type='submit') Create Event

      
